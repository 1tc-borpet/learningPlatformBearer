									"pm.test('Login successful and JWT token received', function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.message).to.equal('Login successful');",
									"    pm.expect(jsonData.access).to.have.property('token');",
									"    pm.expect(jsonData.access.token_type).to.equal('Bearer');",
									"    pm.expect(jsonData.access).to.have.property('expires_in');",
									"});",
									"",
									"pm.test('Save JWT token to environment', function () {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set('jwt_token', jsonData.access.token);",
									"    pm.environment.set('logged_in_user_id', jsonData.user.id);",
									"    pm.environment.set('logged_in_user_role', jsonData.user.role);",
									"    console.log('JWT Token saved:', jsonData.access.token.substring(0, 30) + '...');",
									"    console.log('Token expires in:', jsonData.access.expires_in, 'seconds');",
									"});"
